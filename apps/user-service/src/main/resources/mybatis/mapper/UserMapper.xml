<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gltkorea.icebang.mapper.UserMapper">

    <select id="findByEmail" parameterType="String" resultType="com.gltkorea.icebang.dto.UserDto">
        SELECT
            user_id AS userId, -- DTO의 필드명(userId)과 컬럼명(user_id)이 다르면 별칭(alias)을 사용
            name,
            email
        FROM
            "USER" -- USER는 예약어이므로 큰따옴표로 감싸기
        WHERE
            email = #{email}
    </select>

</mapper>